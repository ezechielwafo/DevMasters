{% extends 'base.html.twig' %}

{% block title %}Nouveau ticket{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h1 class="h4 mb-0">Créer un nouveau ticket</h1>
        </div>
        
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
            
                <div class="mb-3">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.title) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.attachmentFile) }}
                    {{ form_widget(form.attachmentFile, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-text">Formats acceptés : PDF, JPG, PNG (max 2Mo)</div>
                    {{ form_errors(form.attachmentFile) }}
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-paper-plane me-2"></i> Envoyer le ticket
                </button>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}