{% extends 'base.html.twig' %}

{% block title %}Agents index{% endblock %}

{% block body %}
    <h1>Agents index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NameAgents</th>
                <th>Roles</th>
                <th>Email</th>
                <th>CreatedAt</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for agent in agents %}
            <tr>
                <td>{{ agent.id }}</td>
                <td>{{ agent.nameAgents }}</td>
                <td>{{ agent.roles }}</td>
                <td>{{ agent.email }}</td>
                <td>{{ agent.createdAt ? agent.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ agent.password }}</td>
                <td>
                    <a href="{{ path('app_agents_show', {'id': agent.id}) }}">show</a>
                    <a href="{{ path('app_agents_edit', {'id': agent.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_agents_new') }}">Create new</a>
{% endblock %}
